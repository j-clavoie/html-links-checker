{
	"name": "html-links-checker",
	"displayName": "HTML Links Checker",
	"description": "Tools to validate HTML link in the text editor. Result are shonw in the 'Problems' tab",
	"version": "0.0.9",
	"publisher": "j-clavoie",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:html-links-checker.a_tag"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "html-links-checker.a_tag",
				"title": "DDPD - Links Checker A tag"
			}
		],
		"configuration": {
			"title": "HTML Links Checker",
			"properties": {
				"html-links-checker.domain": {
					"type": "string",
					"default": "http://YOUR-DOMAIN-HERE",
					"description": "Specifies the domain name for relative link."
				},
				"html-links-checker.excludedDomains": {
					"type": "array",
					"default": [
						""
					],
					"description": "Specifies all domains to not check (without protocol). Example: google.com"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.30.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.12",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0",
		"webpack": "^5.10.1",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"jsdom": "^16.4.0",
		"needle": "^2.5.2"
	}
}
